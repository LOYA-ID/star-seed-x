{
  "source": {
    "host": "localhost",
    "port": 3306,
    "user": "root",
    "password": "",
    "database": "source_db",
    "table": "source_table",
    "connectionPoolSize": 5,
    "queryTimeout": 300000,
    "maxRetries": 3,
    "retryDelay": 1000
  },
  "destination": {
    "host": "localhost",
    "port": 3306,
    "user": "root",
    "password": "",
    "database": "destination_db",
    "table": "destination_table",
    "connectionPoolSize": 5,
    "queryTimeout": 300000,
    "maxRetries": 3,
    "retryDelay": 1000
  },
  "etl": {
    "batchSize": 1000,
    "primaryKeyColumn": "id",
    "deletedFlagColumn": "is_deleted",
    "sqlQuery": "SELECT * FROM {{table}}",
    "cronSchedule": "*/5 * * * *",
    "maxRetries": 3,
    "retryDelay": 1000,
    "forceFullRefresh": false
  },
  "sqlite": {
    "dbPath": "./data/etl_state.db"
  },
  "logging": {
    "level": "info",
    "logDir": "./logs"
  }
}
